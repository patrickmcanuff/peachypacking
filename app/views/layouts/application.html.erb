<!DOCTYPE html>
<html>
  <head>
    <title>Peachypacking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/flashes' %>

    <%= yield %>

    <%= render 'shared/sign-out-button' %>

    <% unless request.path == '/projects' || request.path == '/users/sign_in' || request.path == '/' || (controller_name == "boxes" && action_name == "edit") || request.path == '/users/sign_up' %>

      <%= render 'shared/footer-most-pages' %>
    <% end %>



  </body>

</html>

