<div class="main-container">
  <h1 class="py-4">Results</h1>
  <%= form_tag search_path, method: :get do %>
    <%= hidden_field :project,:id, value: params[:project][:id] %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control w-75 ml-2",
      value: ""
    %>
    <%= image_submit_tag("search.png", class: 'search_button', alt: 'Find') %>
  <% end %>


  <br>
  <!-- if boxes are available, render boxes orelse tell user no boxes found %> -->

  <!-- if items are available, render items orelse tell user no items found %> -->
  <div class ="container">
  <% @boxes.each do |box| %>
    <%= link_to project_box_path(box.project_id, box.id) do %>
      <div class="card-white">
        <div class="box-card-item">
          <p><b>Box: </b><%= box.name %></p>
        </div>
        <div class="box-card-item">
          <p><b>Size: </b><%= box.size.capitalize %></p>
        </div>
        <div class="box-card-item">
          <p><b>Comments: </b><%= box.comment %></p>
        </div>
        <div class="edit">
          <%= link_to edit_box_path(box.id) do %>
            <i class="fas fa-edit fa-lg" style="color: #FF7A00"></i>
          <% end %>
        </div>
        <div class="delete">
          <%= link_to box_path(box.id), method: :delete, :data => {:confirm => 'Are you sure? '} do %>
            <i class="fas fa-minus-circle fa-lg" style="color: #FF7A00"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

  <div class="cards-in-search">
    <% @boxes.each do |box| %>
      <td><strong>Box</strong>:<%= box.name %></td>
      <br>
      <td>Comment: <%= box.comment %></td>
      <br>
      <td>Size: <%= box.size %></td>
      <br>
      <!--  <td>Full?<%= box.full %></td>
      <br> -->
    <% end%>


    <% @items.each do |item| %>
       <td><strong>item</strong>:<%= item.name %></td>
       <br>
       <td>Comment:<%= item.comment %></td>
       <br>
       <td>Box:<%= item.box.name %></td>
    <% end%>
    <br>
  </div>
</div>

