<div class="main-container">
  <h1 class="py-4">Results</h1>
  <%= form_tag search_path, method: :get do %>
    <%= hidden_field :project,:id, value: params[:project][:id] %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control w-75 ml-4",
      value: ""
    %>
    <%= image_submit_tag("search.png", class: 'search_button ml-2', alt: 'Find') %>
  <% end %>


  <br>
  <!-- if boxes are available, render boxes orelse tell user no boxes found %> -->

  <!-- if items are available, render items orelse tell user no items found %> -->
  <div class ="container">
  <% @boxes.each do |box| %>
    <%= link_to project_box_path(box.project_id, box.id) do %>
      <div class="card-white">
        <div class="box-card-item">
          <p><b>Box: </b><%= box.name %></p>
        </div>
        <div class="box-card-item">
          <p><b>Size: </b><%= box.size.capitalize %></p>
        </div>
        <div class="box-card-item">
          <p><b>Comments: </b><%= box.comment %></p>
        </div>
        <div class="edit">
          <%= link_to edit_box_path(box.id) do %>
            <i class="fas fa-edit fa-lg" style="color: #FF7A00"></i>
          <% end %>
        </div>
        <div class="delete">
          <%= link_to box_path(box.id), method: :delete, :data => {:confirm => 'Are you sure? '} do %>
            <i class="fas fa-minus-circle fa-lg" style="color: #FF7A00"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class ="container">
  <% @items.each do |item| %>
    <div class="card-white">
      <div class="box-card-item">
        <p><b>Item: </b><%= item.name %></p>
      </div>
      <div class="box-card-item">
        <p><b>Box: </b><%= item.box.name %></p>
      </div>
      <div class="box-card-item">
        <p><b>Comments: </b><%= item.comment %></p>
      </div>
      <div class="edit">
        <%= link_to edit_item_path(item.id) do %>
          <i class="fas fa-edit fa-lg" style="color: #FF7A00"></i>
        <% end %>
      </div>
      <div class="delete">
        <%= link_to item_path(item.id), method: :delete, :data => {:confirm => 'Are you sure? '} do %>
          <i class="fas fa-minus-circle fa-lg" style="color: #FF7A00"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

