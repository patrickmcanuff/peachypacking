<h1>Edit box</h1>
<%= simple_form_for(@box) do |f| %>
    <%= f.input :name %>
    <%= f.input :comment %>
    <%= f.input :size, collection: ["small", "medium", "large"] , as: :radio_buttons %>
    <%= f.input :packing_date, html5: true %>
    <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true} %>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
