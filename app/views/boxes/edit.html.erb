<div class ="container">
<h1>Edit box</h1>
<%= simple_form_for(@box) do |f| %>
    <%= f.input :name %>
    <%= f.input :comment %>
    <%= f.input :size, collection: ["small", "medium", "large"] , as: :radio_buttons %>
    <%# f.input :packing_date, html5: true %>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
