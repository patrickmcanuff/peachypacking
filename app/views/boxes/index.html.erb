<div class="container">

<h1>Your boxes</h1>

<%= form_tag search_path, method: :get do %>
  <%= hidden_field :project,:id, value: @project.id %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    value: ""
  %>
  <%= submit_tag "Search", class: "btn btn-primary"%>
<% end %>
<br>

<h1><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newBoxModal">
  Add box <i class="fas fa-plus-circle"></i>
</button></h1>


<div class ="container">
  <div class="card-product">
  <div class="card-product-infos">

  <% if @boxes.empty? %>
  <h1>You have no boxes.</h2>
  <% end %>
<% @boxes.each do |box| %>
  <p><%= box.name %></p>
  <p><%= link_to 'Show box', project_box_path(box.project_id, box.id) %> |</p>
 <p><%= link_to "Edit this box", edit_box_path(box.id) %> |</p>
  <p><%= link_to "Delete this box", box_path(box.id), method: :delete, :data => {:confirm => 'Are you sure? '} %></p>
  <br>
<% end %>
<br>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newBoxModal">
  Add box
</button>
<br>
<br>
<%= link_to "Back", project_path(params[:project_id]) %>
</div>
<%= render "new" %>
</div>
