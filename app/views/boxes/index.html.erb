<div class ="container">
  <% if @boxes.empty? %>
    <p>You have no boxes.</p>
  <% end %>
<% @boxes.each do |box| %>
  <%= box.name %>
  <%= link_to 'Show box', project_box_path(box.project_id, box.id) %> |
  <%= link_to "Edit this box", edit_box_path(box.id) %> |
  <%= link_to "Delete this box", box_path(box.id), method: :delete, :data => {:confirm => 'Are you sure? '} %>
  <br>
<% end %>
<br>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newBoxModal">
  Add box
</button>
<br>
<br>
<%= link_to "Back", project_path(params[:project_id]) %>
</div>
<%= render "new" %>
