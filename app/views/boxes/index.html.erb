<div class="container">

<h1>Your boxes</h1>

<%= form_tag search_path, method: :get do %>
  <%= hidden_field :project,:id, value: @project.id %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    value: ""
  %>
  <%= submit_tag "Search", class: "btn btn-primary"%>
<% end %>
<br>

<h1><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newBoxModal">
  Add box <i class="fas fa-plus-circle"></i>
</button></h1>



<div class ="container">
  <% if @boxes.empty? %>
    <p>You have no boxes.</p>
  <% else %>
    <div>
      <h2 class="title">Your boxes</h2>
    </div>
  <% end %>
</div>

<div class ="container">
  <% @boxes.each do |box| %>
    <div class="card-white">
      <div class="name">
        <p class="font-weight-bold"><%= box.name %></p>
      </div>
      <%= box.size.capitalize %>
      <br>
      <div class="comment">
        <%= box.comment %>
      </div>
      <br>
      <div class="item">
        <%= link_to 'Items', project_box_path(box.project_id, box.id) %>
      </div>
      <div class="edit">
        <%= link_to edit_box_path(box.id) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <div class="delete">
        <%= link_to box_path(box.id), method: :delete, :data => {:confirm => 'Are you sure? '} do %>
          <i class="fas fa-minus-circle"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<br>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newBoxModal">
  Add box
</button>
<br>
<br>
<%= link_to "Back", project_path(params[:project_id]) %>
</div>
<%= render "new" %>
</div>
