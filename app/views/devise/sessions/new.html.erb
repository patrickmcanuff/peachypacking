<div class="container min-vh-100 d-flex col justify-content-center align-items-center">
  <div class="d-flex flex-column col-md-6 col-lg-4">
    <h2 class="mb-4 header-sign-in">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn-sign-in btn-sign-in:hover">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    <%#= render "devise/shared/links" %>
  </div>
</div>

