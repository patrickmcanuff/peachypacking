<div class="container">
<div class="text-center m-2 p-2 text-warning">
  <h3>Let's get organized!</h3>
</div>
<%= form_tag search_path, method: :get do %>
  <%= hidden_field :project,:id, value: @project.id %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    value: "Search your projects"
  %>
  <br>
  <%= submit_tag "Search", class: "btn btn-primary"%>
<% end %>

<% @items.each do |item| %>
<br>
  <%= item.name %>
  <br>
  <%= item.comment %>
  <br>
  <%= item.packing_date %>
  <br>
  <%= link_to "Edit this item", edit_item_path(item.id) %>
  <br>
  <%= link_to "Delete this item", item_path(item.id), method: :delete, :data => {:confirm => 'Are you sure? '} %>
<% end %>
<br>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newItemModal">
  Add item
</button>
<br>
<br>
<%= link_to "Back", project_path(params[:project_id]) %>
</div>

<%= render "new" %>
